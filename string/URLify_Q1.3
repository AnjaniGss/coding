//given a string we need to replace the spaces in it with %20
#include<bits/stdc++.h>
using namespace std;
 string changespaces(string str){
 	int i,spacecount=0,newl=0;
 	//counting no. of spaces
 	for(i=0;str[i];i++){
 		if(str[i]==' '){
 			spacecount++;
		 }
	 }
	 
	 newl=str.length();
     //trimming spaces at the end of string
	 while(str[newl-1]==' '){
	 	--newl;
	 	--spacecount;
	 	
	 }
	
	
	 int k=newl;
	 newl=k+spacecount*2;
	 cout<<"new len "<<newl<<"\n";
	 char str1[newl+1];
	 str1[newl]='\0';
	 int j=0;
	 for(i=0;i<k;i++){
	 	if(str[i]==' '){
	 		str1[j++]='%';
	 		str1[j++]='2';
	 		str1[j++]='0';
		 }
		 else{
		 	str1[j++]=str[i];
		 }
	 }
	 cout<<"new str "<<str1;
	 return str1;
 }
 
 int main(){
 	string str="hey there how u dng     ";
 	changespaces(str);
 	return 0;
 }
